pipeline {
    agent {
        kubernetes {
            cloud 'kubernetes'
            namespace 'jenkins'
        }
    }

    tools {
        nodejs 'NodeJS 21.7.1 - LTS'
    }

    environment {
        SERVICE_NAME = "auth-service"
        YOUR_DOCKERHUB_USERNAME = "emanudoc"
        ORGANIZATION_NAME = "anp"
        REPOSITORY_TAG = "${YOUR_DOCKERHUB_USERNAME}/${ORGANIZATION_NAME}-${SERVICE_NAME}:${BUILD_ID}"
    }

    stages {
        stage('Instalando as dependÃªncias') {
            steps {
                nodejs(nodeJSInstallationName: 'NodeJS 21.7.1 - LTS') {
                    sh 'npm install'
                }
            }
        }
        
        stage('Build') {
            steps {
                nodejs(nodeJSInstallationName: 'NodeJS 21.7.1 - LTS') {
                    sh 'npm run build'
                }
            }
        }

        stage('Test') {
            steps {
                nodejs(nodeJSInstallationName: 'NodeJS 21.7.1 - LTS') {
                    sh 'npm run test'
                }
            }
        }
    }
}
