{
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "test",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/../src/$1",
      "^prisma/(.*)$": "<rootDir>/../prisma/$1"
    }
  }